{
	"schemaVersion": 1,
	"id": "nolijium",
	"version": "${mod_version}",
	"name": "${mod_name}",
	"description": "${mod_description}",
	"authors": [
		"${nolij}"
	],
	"contact": {
		"website": "${mod_url}",
		"repo": "${repo_url}",
		"issues": "${issue_url}"
	},
	"license": "OSL-3.0",
	"icon": "icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			"dev.nolij.nolijium.fabric.NolijiumFabric"
		],
		"modmenu": [
			"dev.nolij.nolijium.fabric.integration.modmenu.NolijiumModMenuIntegration"
		]
	},
	"mixins": [
		"nolijium.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${fabric_loader_version}",
		"fabric-lifecycle-events-v1": "*",
		"fabric-rendering-v1": "*"
	}
}
